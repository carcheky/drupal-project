### Documentation available at https://wodby.com/docs/stacks/drupal/local
### Changelog can be found at https://github.com/wodby/docker4drupal/releases
### Images tags format explained at https://github.com/wodby/docker4drupal#images-tags

### PROJECT SETTINGS

PROJECT_NAME=hdrupal
PROJECT_BASE_URL=hdrupal.docker.localhost
TRUSTED_HOSTS=hdrupal.docker.localhost
DRUSH_OPTIONS_URI=http://hdrupal.docker.localhost

PROJECT_STAGE=local
# PROJECT_STAGE=dev
# PROJECT_STAGE=stage
# PROJECT_STAGE=prod

DB_NAME=drupal
DB_USER=drupal
DB_PASSWORD=drupal
DB_ROOT_PASSWORD=password
DB_HOST=mariadb
DB_PORT=3306
DB_DRIVER=mysql

APACHE_DOCUMENT_ROOT=/var/www/html/web
NGINX_SERVER_ROOT=/var/www/html/web
WEB_PORT=80
WEB_SSL_PORT=443
MYSQL_CHARACTER_SET_SERVER=utf8mb4
MYSQL_COLLATION_SERVER=utf8mb4_general_ci
CONFIG_SYNC_DIRECTORY=/var/www/html/config/default
HASH_SALT_FILE=/var/www/html/htools/.salt
CSS_PREPROCESS=FALSE
JS_PREPROCESS=FALSE


SIMPLETEST_BASE_URL=http://nginx
SIMPLETEST_DB=mysql://drupal:drupal@mariadb/drupal
BROWSERTEST_OUTPUT_DIRECTORY=/var/www/html/web/sites/simpletest/browser_output

# A common use case is to supply database creds via the environment. Edit settings.php
# like so:
#
# $databases['default']['default'] = [
#   'database' => getenv('DB_NAME'),
#   'driver' => 'mysql',
#   'host' => getenv('DB_HOST'),
#   'namespace' => 'Drupal\\Core\\Database\\Driver\\mysql',
#   'password' => getenv('DB_PASSWORD'),
#   'port' => getenv('DB_PORT'),
#   'prefix' => '',
#   'username' => getenv('DB_USER'),
# ];

